<Window x:Name="Button" x:Class="MyFirstWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFirstWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnSayHello" Content="Say Hello!" HorizontalAlignment="Left" Margin="126,106,0,0" VerticalAlignment="Top" Width="130" RenderTransformOrigin="0.5,0.5" Click="btnSayHello_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="1"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBox x:Name="txtMessage" HorizontalAlignment="Left" Height="23" Margin="125,167,0,0" TextWrapping="Wrap" Text="Tähän tulee tervehdys" VerticalAlignment="Top" Width="131" FontWeight="Bold"/>
        <TextBox x:Name="txtInput" HorizontalAlignment="Left" Height="23" Margin="369,116,0,0" TextWrapping="Wrap" Text="[kirjoita nimesi tähän]" VerticalAlignment="Top" Width="126"/>

    </Grid>
</Window>
